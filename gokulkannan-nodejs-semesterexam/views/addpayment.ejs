<form action="/addpayment" method="POST" style="margin: 40px 450px;font-size: 20px;font-weight: 900;border: 2px solid black ;padding: 15px 0px 5px 40px;height: 60vh;width: 400px;border-radius: 20px;">
  <h1 style="font-size: 35px;color: tomato;font-weight: 900;font-family:Arial, Helvetica, sans-serif;margin: 10px 0 20px 30px;" >Create a Fine</h1>
  
  <div class="form-group">
    <label for="name">Student Name</label>
    <input type="text" class="form-control" required name="name" style="border:2px solid black; border-radius: 7px;margin: 0 5px;">
  </div><br />
  
  <div class="form-group">
    <label for="register-number">Student Register Number</label>
    <input type="text" class="form-control" required name="register_number" style="border:2px solid black; border-radius: 7px;margin: 0 5px;">
  </div><br />
  
  <div class="form-group">
    <label for="fine-type">Fine Type</label>
    <select class="form-control" name="fine_type" id="fine-type" required>
      <option value="informal-dress-code">Informal Dress Code (Rs. 15)</option>
      <option value="late-submission-assignment">Late Submission of Assignment (Rs. 50)</option>
      <option value="late-comers">Late Comers (Rs. 50)</option>
      <option value="other">Other</option>
    </select>
  </div><br />

  <div class="form-group">
    <label for="amount">Amount:</label>
    <input type="number" class="form-control" required name="amount" step="0.01" style="border:2px solid black; border-radius: 7px;margin: 0 5px;">
  </div><br />

  <div class="form-group">
    <label for="date">Payment Date</label>
    <input type="date" class="form-control" required name="date" style="border:2px solid black; border-radius: 7px;margin: 0 5px;">
  </div><br />

  <div class="form-group">
    <label for="batch">Batch:</label>
    <input type="text" class="form-control" required name="batch" style="border:2px solid black; border-radius: 7px;margin: 0 5px;">
  </div><br />

  <div class="form-group">
    <label for="fund-name">Fund Name:</label>
    <input type="text" class="form-control" required name="fund_name" style="border:2px solid black; border-radius: 7px;margin: 0 5px;">
  </div><br />

  <div class="form-group">
    <label for="section">Section:</label>
    <input type="text" class="form-control" required name="section" style="border:2px solid black; border-radius: 7px;margin: 0 5px;">
  </div><br />

  <button type="submit" class="btn btn-dark" style="border: 2px solid black;background-color: tomato;color: wheat;border-radius: 5px;margin: 5px 0px 10px 120px;padding: 3px 10px;">Submit</button>
</form>

<script>
  const fineTypeSelect = document.querySelector('#fine-type');
  const amountInput = document.querySelector('[name="amount"]');

  fineTypeSelect.addEventListener('change', () => {
    const selectedOption = fineTypeSelect.value;
    switch (selectedOption) {
      case 'informal-dress-code':
        amountInput.value = '15';
        break;
      case 'late-submission-assignment':
      case 'late-comers':
        amountInput.value = '50';
        break;
      default:
        amountInput.value = '';
    }
  });
</script>
