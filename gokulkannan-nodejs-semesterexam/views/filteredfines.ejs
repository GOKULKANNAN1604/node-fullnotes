<!-- filteredFines.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Filtered Fines</title>
</head>
<body>
  <h1>Filtered Fines</h1>
  <form action="/filter" method="GET">
    <input type="text" name="student" placeholder="Student Name">
    <input type="text" name="batch" placeholder="Batch">
    <input type="text" name="section" placeholder="Section">
    <input type="text" name="fundType" placeholder="Fund Type">
    <input type="text" name="fundName" placeholder="Fund Name">
    <button type="submit">Filter</button>
  </form>
  <% if (fines.length === 0) { %>
    <p>No fines found matching the selected criteria.</p>
  <% } else { %>
    <ul>
      <% fines.forEach(function (fine) { %>
        <li>
          <p>Name: <%= fine.name %></p>
          <p>Register Number: <%= fine.register_number %></p>
          <p>Amount: <%= fine.amount %></p>
          <p>Fine Type: <%= fine.fine_type %></p>
          <p>Date: <%= fine.date %></p>
          <p>Section: <%= fine.section %></p>
          <p>Fund Name: <%= fine.fund_name %></p>
        </li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
